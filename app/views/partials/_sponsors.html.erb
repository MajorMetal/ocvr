<div class='container clearfix'>
	<h3 class='section-title'>SPONSORS</h5>
	<div class='column full'>
		<div class='sponsor-cont clearfix'>
			<h6 class='section-subtitle sponsor'>DIAMOND</h6>
			<% @diamond.each do |sponsor| %>
				<div class='sponsor-img-cont diamond'>
					<img class='sponsor-img' src="<%= asset_path("#{sponsor.img}") %>" />
				</div>
			<% end %>
		</div>
		<div class='sponsor-cont clearfix'>
			<h6 class='section-subtitle sponsor'>RUBY</h6>
			<% @ruby.each do |sponsor| %>
				<div class='sponsor-img-cont diamond'>
					<img class='sponsor-img' src="<%= asset_path("#{sponsor.img}") %>" />
				</div>
			<% end %>
		</div>
		<div class='sponsor-cont clearfix'>
			<h6 class='section-subtitle sponsor'>MEDIA</h6>
			<% @other.each do |sponsor| %>
				<div class='sponsor-img-cont duncan'>
					<img class='sponsor-img duncan' src="<%= asset_path("#{sponsor.img}") %>" />
				</div>
			<% end %>
			<% @media.each do |sponsor| %>
				<div class='sponsor-img-cont'>
					<img class='sponsor-img' src="<%= asset_path("#{sponsor.img}") %>" />
				</div>
			<% end %>
		</div>
	</div>
	<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
		<input type="hidden" name="cmd" value="_s-xclick">
		<input type="hidden" name="hosted_button_id" value="PPNXL7JPEAHLE">
		<table>
			<tr><td>
				<input type="hidden" name="on0" value="Sponsorship Type">
				Sponsorship Type
			</td></tr>
			<tr><td>
				<select name="os0">
					<option value="Diamond">Diamond $2,500.00 USD</option>
					<option value="Ruby">Ruby $1,500.00 USD</option>
					<option value="Emerald">Emerald $500.00 USD</option>
					<option value="Entertainment">Entertainment $1,000.00 USD</option>
					<option value="Featured Panel">Featured Panel $1,000.00 USD</option>
					<option value="Food and Drink">Food and Drink $500.00 USD</option>
					<option value="Private Meeting Room">Private Meeting Room $1,000.00 USD</option>
				</select>
			</td></tr>
		</table>
		<input type="hidden" name="currency_code" value="USD">
		<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="	PayPal - The safer, easier way to pay online!">
		<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
	</form>
</div>