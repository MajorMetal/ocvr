<div class='home_subscription_form'>
	<%= form_for @users do |f| %>
		<% if @users.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@users.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
      <% @users.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
		<%= f.text_field :email, class: 'home_subscription_form_input', placeholder: 'Email' %>
		<%= f.submit 'Sign Up' %>
	<% end %>
</div>