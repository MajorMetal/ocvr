/* ==~~~== Mobile Hamburger Menu Reveal ==~~~== */
.nav_reveal {
  position: fixed;
  width: 40px;
  height: 40px;
  top: 0px;
  left: 0px;
  padding-left: 7px;
  background-color: #FF6927;
  cursor: pointer;
  z-index: 6;
}
#nav_reveal {
	display: block;
	cursor: pointer;
	font-size: 20px;
  border-radius: 0 0 80px 0;
  z-index: 7;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
.nav_reveal span, .nav_reveal span:before, .nav_reveal span:after {
  position: absolute;
  display: block;
  height: 3px;
  width: 18px;
  top: 9px;
  border-radius: 1px;
  background: white;
  content: '';
}
.nav_reveal span:before { top: 5px; }
.nav_reveal span:after { top: 10px; }
.nav_reveal, .nav_reveal span, .nav_reveal span:before, .nav_reveal span:after, .nav_list_mobile {
  -webkit-transition: 500ms ease-in-out;
    -moz-transition: 500ms ease-in-out;
      -o-transition: 500ms ease-in-out;
        transition: 500ms ease-in-out;
}
.nav_reveal.active, .nav_reveal.active span { background-color: transparent; }
.nav_reveal.active span:before, .nav_reveal.active span:after { top: 5px; }
.nav_reveal.active span:before {
  background: #FF6927;
  -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
      -o-transform: rotate(45deg);
        transform: rotate(45deg);
}
.nav_reveal.active span:after {
  background: #FF6927;
  -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
      -o-transform: rotate(-45deg);
        transform: rotate(-45deg);
}
.nav_list_mobile.active { left: 0px; }


/* ==~~~== Modal ==~~~== */
.modal {
  position: relative;
  display: block;
  text-align: center;
  padding-top: 50px;
  top: 0px;
  z-index: 0;
}
.modal_exit {
  position: absolute;
  display: none;
  height: 30px;
  width: 30px;
  top: 0px;
  right: 0px;
  text-align: center;
  background: #FFF;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
.modal_exit > i {
  position: absolute;
  margin: auto;
  height: 15px;
  width: 15px;
  top: -5px; right: 0; bottom: 0; left: 0;
}
.modal_exit:hover {
  color: #FF6927;
}
.modal_title {
  display: none;
}
.modal_title {
  font-family: 'Montserrat', arial, sans-serif;
  padding-top: 20px;
}
.modal_subscription_form {
  position: relative;
  width: 90%;
  margin: 0 auto;
  padding-top: 20px;
}
.home_subscription_form { margin-top: 20px; }
.home_subscription_form_input {
  margin-right: 5px;
  width: 200px;
}


@media (min-width:740px) {
  .modal {
    position: absolute;
    width: 400px;
    height: 400px;
    margin: 0 auto;
    padding-top: 0;
    top: -400px; left: 0; right: 0;
    background: #FFF;
    z-index: 7;
    -webkit-transition: 1000ms ease-in-out;
      -moz-transition: 1000ms ease-in-out;
        -o-transition: 1000ms ease-in-out;
          transition: 1000ms ease-in-out;
  }
  .web {
    -webkit-transition: 0ms ease-in;
      -moz-transition: 0ms ease-in;
        -o-transition: 0ms ease-in;
          transition: 0ms ease-in;
  }
  .modal_exit { display: block; }
  .modal_title { display: block; }
  .modal > .section_title { display: none; }
  .modal_subscription_form { width: 325px; }
}


@media (min-width:1025px) {
  .modal { width: 450px; }
}


