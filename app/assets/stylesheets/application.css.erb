/* ==~~~== Responsive Design Setup ==~~~== */
/* Small screens (default) */
html, body {
  font-size: 100%;
  margin: 0;
  padding: 0;
  font-family: 'Istok Web', arial, sans-serif;
}
@media (min-width: 740px) { 
  html { font-size: 112%; }
}
@media (min-width: 1025px) { 
  html { font-size: 120%; }
}
@media (min-width: 1601px) {
  html { font-size: 125%; }
}
*, *:before, *:after {
  -webkit-box-sizing: border-box;
  	-moz-box-sizing: border-box;
  		-o-box-sizing: border-box;
  			box-sizing: border-box;
}
.container {
  margin: 0 auto;
  max-width: 48rem;
  width: 90%;
}
.clearfix:before, .clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after { clear: both; }
.clearfix { zoom: 1; }


@media (min-width: 740px) {
  .column {
    float: left;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  .column.full { width: 100%; }
  .column.two-thirds { width: 66.7%; }
  .column.half { width: 50%; }
  .column.third { width: 33.3%; }
  .column.fourth { width: 25%; }
  .column.fifth { width: 20%; }
  .column.flow-opposite { float: right; }
}


/* ==~~~== Modified Elements ==~~~== */
input[type=email], input[type=text] {
  border: 1px solid #AAA;
  border-radius: 5px;
  padding: 0.75em 1em;
  font-size: 0.8em;
  color: #222;
}
input[type=email]:focus, input[type=text]:focus {
  outline: none;
  background: #FFF;
}
input[type=email].valid { border: 1px solid green; }
input[type=email].error { border: 1px solid red; }
input[type=submit] {
  border: 1px solid #FF6927;
  border-radius: 5px;
  padding: 0.75em 1.5em;
  margin: 0 auto;
  font-size: 0.8em;
  color: #FFF;
  background: #FF6927;
  outline: none;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
a {
  text-decoration: none;
  color: #000;
}
ul { list-style-type: none; }
input, textarea {
  -webkit-appearance: none;
  -webkit-border-radius: 0;
}
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 1000px white inset;
}

@media (min-width: 740px) {
  input[type=submit]:hover {
    background: #FD8F3E;
    border: 1px solid #FD8F3E;
  }
}


/* ==~~~== Multi-Use Display Classes ==~~~== */
.hidden { display: none; }
.invisible { visibility: hidden; }
.mobile-bg { display: block; }
.web-bg { display: none; }
.cover {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
  z-index: 6;
  -webkit-transition: 500ms ease-in-out;
    -moz-transition: 500ms ease-in-out;
      -o-transition: 500ms ease-in-out;
        transition: 500ms ease-in-out;
}
.flash-notice {
  position: absolute;
  width: 100%;
  height: auto;
  top: 80px;
  border: 1px solid green;
  background: lightgreen;
  z-index: 1;
}
.flash-notice.error {
  border: 1px solid red;
  background: lightcoral;
}
.flash-message {
  position: relative;
  color: green;
  font-size: 0.8em;
  text-align: center;
  margin: 0;
  padding: 4px 0;
}
.flash-message.error { color: red; }

@media (min-width: 740px) {
  .mobile-bg { display: none; }
  .web-bg { display: block; }
  .flash-notice { top: 100px; }
}
@media (min-width: 1025px) {
  .flash-notice { top: 120px; }
}
@media (min-width: 1601px) {
  .flash-notice { top: 160px; }
}


/*  ==~~~== Navbars ==~~~== */
.nav-web {
	position: fixed;
  display: block;
	height: 80px;
	width: 100%;
	top: 0; left: 0;
  background-color: #FFF;
  z-index: 6;
}
.nav-logo-cont {
  position: relative;
  height: 100%;
  width: 100%;
  margin: 0;
  background-color: #FFF;
}
.nav-logo-img {
  position: relative;
  display: block;
  height: auto;
  width: 90%;
  max-width: 1200px;
  top: 50%;
  -webkit-transform: translateY(-50%);
    -moz-transform: translateY(-50%);
      -o-transform: translateY(-50%);
        transform: translateY(-50%);
  margin: 0 auto;
  font-family: 'Montserrat', arial, sans-serif;
}
.nav-list-web {
  position: relative;
  display: none;
  height: 30px;
  width: 90%;
  bottom: 30px;
	margin: 0 auto;
	padding: 0;
	font-size: 0.8em;
}
.inline-btn { display: inline-block; }
.nav-btn-web {
  position: relative;
	width: 120px;
	margin: 0;
  padding: 5px 10px;
	border-radius: 10px;
  text-align: center;
  font-size: 20px;
  font-weight: 900;
  color: #222;
  font-family: 'Montserrat', arial, sans-serif;
	cursor: pointer;
}
#subscribe-btn {
  position: absolute;
  width: auto;
  top: 60px; right: 0;
  padding: 5px 10px;
  border: 3px solid #222;
  background: #FFF;
  color: #222;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
.nav-mobile {
  position: fixed;
	display: block;
	z-index: 8;
}
.nav-list-mobile {
	position: fixed;
  height: 100vh;
	width: 200px;
	top: 0px; left: -200px;
  margin: 0;
	padding: 35px 0 0 0;
	background-color: #222;
}
.nav-btn-mobile {
	padding: 5px;
	cursor: pointer;
  text-align: center;
  font-family: 'Montserrat', arial, sans-serif;
  color: #FFF;
}

@media (min-width: 740px) {
  .nav-web { height: 100px; }
  .nav-list-web { display: block; }
  .nav-mobile { display: none; }
}
@media (min-width: 1025px) {
  .nav-web { height: 120px; }
}


/* ==~~~== Modal ==~~~== */
.modal {
  position: absolute;
  display: none;
  height: 325px;
  width: 400px;
  top: 0;
  padding: 0 30px 30px 30px;
  text-align: center;
  z-index: 0;
}
.modal-exit {
  position: absolute;
  height: 30px;
  width: 30px;
  top: 0; right: 0;
  text-align: center;
  background: #FFF;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
.modal-exit > i {
  position: absolute;
  height: 20px;
  width: 20px;
  top: 10px; right: 10px;
}
.modal-exit:hover { color: #FF6927; }
.modal-title {
  position: relative;
  top: 0;
  font-family: 'Montserrat', arial, sans-serif;
}
.subscription-form-cont {
  position: relative;
  display: block;
  width: 100%;
  margin: 0 auto;
}
.subscription-form-cont > .section-text { width: 90%; }
.subscription-form { margin-top: 20px; }
.subscription-form-input {
  margin-right: 5px;
  width: 200px;
}

@media (min-width:740px) {
  .modal {
    display: block;
    top: -100%; left: 0; right: 0;
    margin: 0 auto;
    background: #FFF;
    z-index: 7;
    -webkit-transition: 1000ms ease-in-out;
      -moz-transition: 1000ms ease-in-out;
        -o-transition: 1000ms ease-in-out;
          transition: 1000ms ease-in-out;
  }
}
@media (min-width:1025px) {
  .subscription-form { margin-top: 30px; }
  .modal {
    height: 350px;
    width: 450px;
  }
}
@media (min-width:1601px) {
  .modal {
    height: 375px;
    width: 500px;
  }
}


/* ==~~~== Footer ==~~~== */
footer {
