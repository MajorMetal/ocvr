/* ==~~~== Responsive Design Setup ==~~~== */
html, body {
  margin: 0;
  padding: 0;
  font-family: 'Istok Web', arial, sans-serif;
  font-size: 18px;
}
@media (min-width: 740px) { 
  html, body { font-size: 19px; }
}
@media (min-width: 1025px) { 
  html, body { font-size: 20px; }
}
*, *:before, *:after {
  -webkit-box-sizing: border-box;
  	-moz-box-sizing: border-box;
  		-o-box-sizing: border-box;
  			box-sizing: border-box;
}
.container {
  position: relative;
  margin: 0 auto;
  width: 90%;
}
.container.full { width: 100%; }
.clearfix { zoom: 1; }
.clearfix:before, .clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after { clear: both; }


@media (min-width: 740px) {
  .column {
    float: left;
    padding: 0 1rem;
  }
  
  .column.full { width: 100%; }
  .column.two-thirds { width: 66.7%; }
  .column.half { width: 50%; }
  .column.third { width: 33.3%; }
  .column.fourth { width: 25%; }
  .column.fifth { width: 20%; }
  .column.flow-opposite { float: right; }
}


/* ==~~~== Modified Elements ==~~~== */
input[type=email], input[type=text] {
  width: 50%;
  border: 1px solid #AAA;
  border-radius: 5px;
  padding: 0.5em 0.5em;
  font-size: 16px;
  color: #222;
}
input[type=email]:focus, input[type=text]:focus {
  outline: none;
  background: #FFF;
}
input[type=email]:-ms-input-placeholder, input[type=text]:-ms-input-placeholder { color: #888; }
input[type=email].valid { border: 1px solid green; }
input[type=email].error { border: 1px solid red; }
input[type=submit] {
  border: 1px solid #FF6927;
  border-radius: 5px;
  padding: 0.75em 1.5em;
  margin: 0 auto;
  font-size: 1em;
  color: #FFF;
  background: #FF6927;
  outline: none;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
select {
  background: #FFF;
  height: 30px;
  width: 300px;
  padding: 5px;
  font-size: 16px;
  line-height: 1;
  border: 1px solid #AAA;
}
select:focus { outline: none; }
table { margin: 20px auto; }
h1 { font-size: 2.5em; }
h2 { font-size: 2.25em; }
h3 { font-size: 2em; }
h4 { font-size: 1.75em; }
h5 { font-size: 1.5em; }
h6 { font-size: 1.25em; }
h1, h2, h3, h4, h5, h6 { margin: 0; }
a {
  text-decoration: none;
  color: #000;
}
ul { list-style-type: none; }
input, textarea {
  -webkit-appearance: none;
  -webkit-border-radius: 0;
}
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 1000px white inset;
}

@media (min-width: 740px) {
  input[type=email], input[type=text] {
    border: 1px solid #AAA;
    border-radius: 5px;
    padding: 0.75em 1em;
    font-size: 1em;
    color: #222;
  }
  input[type=submit]:hover {
    background: #FD8F3E;
    border: 1px solid #FD8F3E;
  }
}


/* ==~~~== Multi-Use Display Classes ==~~~== */
.hidden { display: none; }
.invisible { visibility: hidden; }
.mobile-bg { display: block; }
.web-bg { display: none; }
.cover {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
  z-index: 5;
  -webkit-transition: 500ms ease-in-out;
    -moz-transition: 500ms ease-in-out;
      -o-transition: 500ms ease-in-out;
        transition: 500ms ease-in-out;
}
.flash-notice {
  position: absolute;
  width: 100%;
  height: 30px;
  top: 80px;
  border: 1px solid green;
  background: lightgreen;
  font-size: 12px;
  z-index: 2;
}
.flash-notice.error {
  border: 1px solid red;
  background: lightcoral;
}
.flash-message {
  position: relative;
  color: green;
  text-align: center;
  margin: 0;
  padding: 7px 0;
}
.flash-message.error { color: red; }

@media (min-width: 740px) {
  .mobile-bg { display: none; }
  .web-bg { display: block; }
  .flash-notice {
    top: 140px;
    font-size: 16px;
  }
  .flash-message { padding: 5px 0; }
  .cover { z-index: 6; }
}
@media (min-width: 1025px) {
  .flash-notice { top: 160px; }
}


/*  ==~~~== Navbars ==~~~== */
.navbar {
	position: fixed;
  display: block;
	height: 80px;
	width: 100%;
	top: 0; left: 0;
  background-color: #FFF;
  z-index: 8;
}
.nav-logo-cont {
  position: relative;
  height: 100%;
  width: 100%;
  margin: 0;
  background-color: #FFF;
}
.nav-logo-img {
  position: relative;
  display: block;
  height: auto;
  width: 80%;
  max-width: 1200px;
  top: 50%;
  -webkit-transform: translateY(-50%);
    -moz-transform: translateY(-50%);
      -o-transform: translateY(-50%);
        transform: translateY(-50%);
  margin-left: 5%;
  font-family: 'Montserrat', arial, sans-serif;
}
.nav-list-web {
  position: relative;
  display: none;
  height: 40px;
  width: 90%;
  max-width: 1200px;
  bottom: 0;
	margin: 0 auto;
	padding: 0;
}
.inline-btn { display: inline-block; }
.nav-btn-web {
  position: relative;
  height: 40px;
  width: 120px;
  top: 9px;
	margin: 0;
  padding: 6px 6px;
  text-align: center;
  font-size: 15px;
  font-weight: 900;
  color: #222;
  font-family: 'Montserrat', arial, sans-serif;
	cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
.nav-btn-web:hover {
  font-size: 17px;
  border-top: 3px solid #FF6927;
}
#subscribe-btn {
  position: absolute;
  height: 35px;
  width: auto;
  top: 0; right: 0;
  border: 2px solid #FF6927;
  border-radius: 5px;
  background: #FF6927;
  color: #FFF;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
#subscribe-btn:hover {
  font-size: 15px;
  background: #FD8F3E;
  border: 2px solid #FD8F3E;
}

#nav-list-mobile {
	position: fixed;
  height: 0vh;
	width: 100%;
	top: -300px;
  margin: 0;
	background-color: #222;
  z-index: 7;
}
#nav-list-mobile.active {
  top: 80px;
  height: 100vh;
}
.mobile-btn {
  position: relative;
  display: inline-block;
  width: 100%;
  float: left;
  padding: 10px;
  color: #DDD;
}
.mobile-btn.active {
  display: inline-block;
  width: 33.3%;
  margin-bottom: 20px;
}
.nav-btn-mobile {
  position: relative;
  width: 100%;
	padding: 5px;
	cursor: pointer;
  text-align: center;
  font-family: 'Montserrat', arial, sans-serif;
  font-size: 16px;
  color: #FFF;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
.nav-btn-mobile:hover {
  border-left: 3px solid #FF6927;
  font-size: 18px;
}
.mobile-btn.active > .nav-btn-mobile:hover { font-size: 16px; }
.nav-reveal {
  position: fixed;
  width: 40px;
  height: 20px;
  top: 55px; right: 0;
  cursor: pointer;
  z-index: 10;
}
#nav-reveal {
  display: block;
  cursor: pointer;
  z-index: 10;
}
.nav-reveal span, .nav-reveal span:before, .nav-reveal span:after {
  position: absolute;
  display: block;
  height: 5px;
  width: 30px;
  top: 0px;
  border-radius: 1px;
  background: #FF6927;
  content: '';
}
.nav-reveal span:before { top: 8px; }
.nav-reveal span:after { top: 16px; }
.nav-reveal, .nav-reveal span, .nav-reveal span:before, .nav-reveal span:after {
  -webkit-transition: 500ms ease-in-out;
    -moz-transition: 500ms ease-in-out;
      -o-transition: 500ms ease-in-out;
        transition: 500ms ease-in-out;
}
#nav-list-mobile {
  -webkit-transition: 1000ms ease-in-out;
    -moz-transition: 1000ms ease-in-out;
      -o-transition: 1000ms ease-in-out;
        transition: 1000ms ease-in-out;
}
.nav-reveal.active, .nav-reveal.active span { background-color: transparent; }
.nav-reveal.active span:before, .nav-reveal.active span:after { top: 5px; }
.nav-reveal.active span:before {
  -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
      -o-transform: rotate(45deg);
        transform: rotate(45deg);
}
.nav-reveal.active span:after {
  -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
      -o-transform: rotate(-45deg);
        transform: rotate(-45deg);
}
.mobile-subscription {
  position: relative;
  display: inline-block;
  height: 40px;
  width: 100%;
}
#mobile-subscription-form-submit {
  font-size: 16px;
  padding: 0.5em;
}

@media (min-width: 740px) {
  .navbar {
    height: 140px;
    z-index: 5;
  }
  .nav-logo-cont { height: 100px; }
  .nav-logo-img {
    width: 90%;
    margin: 0 auto;
  }
  .nav-list-web { display: block; }
  .nav-list-mobile { display: none; }
  #nav-reveal { display: none; }
}
@media (min-width: 1025px) {
  .navbar { height: 160px; }
  .nav-logo-cont { height: 120px; }
}


/* ==~~~== Modal ==~~~== */
.modal {
  position: absolute;
  display: none;
  height: 400px;
  width: 500px;
  top: 0;
  padding: 25px;
  text-align: center;
  z-index: 0;
}
.modal-exit {
  position: absolute;
  height: 30px;
  width: 30px;
  top: 0; right: 0;
  text-align: center;
  background: #FFF;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
.modal-exit > i {
  position: absolute;
  height: 20px;
  width: 20px;
  top: 10px; right: 10px;
  font-size: 20px;
}
.modal-exit:hover { color: #FF6927; }
.modal-title {
  position: relative;
  top: 0;
  padding-bottom: 25px;
  font-family: 'Montserrat', arial, sans-serif;
}
.subscription-form-cont {
  position: relative;
  display: block;
  width: 100%;
  margin: 0 auto;
}
.subscription-form-cont > .section-text {
  margin: 0 auto;
}
.subscription-form {
  height: 40px;
}
.subscription-form-input {
  margin-right: 5px;
  width: 275px;
}

@media (min-width:740px) {
  .modal {
    display: block;
    top: -400px; left: 0; right: 0;
    margin: 0 auto;
    background: #FFF;
    z-index: 7;
    -webkit-transition: 1000ms ease-in-out;
      -moz-transition: 1000ms ease-in-out;
        -o-transition: 1000ms ease-in-out;
          transition: 1000ms ease-in-out;
  }
  .subscription-form { padding-top: 25px; }
}
@media (min-width:1025px) {
  .modal { width: 550px; }
}


/* ==~~~== Footer ==~~~== */
footer {
  position: relative;
  display: block;
  height: 125px;
	width: 100%;
	background-color: #222;
	z-index: 1;
}
.social-media-nav {
