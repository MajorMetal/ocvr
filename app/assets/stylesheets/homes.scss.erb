	max-width: 100%;
	margin: 10px auto;
	clear: both;

	&.half, &.nrml, &.med, &.sml, &.tiny {
		width: 48%;
		float: left;
		margin: 1%;
		clear: none;
	}

	&.duncan {
		display: block;
		height: auto;
		margin: 1% auto;
		float: none;
	}
}

.sponsor-img, .exhibitor-img {
	position: relative;
	max-height: 100%; max-width: 100%;
	top: 50%;
	padding: 0 0.25em;
	@include transform(translateY(-50%));

	&.duncan {
		top: 0;
		@include transform(translateY(0%));
	}

	&.height-sml { height: 75%; }
	&.width-full { width: 100%; }
}

