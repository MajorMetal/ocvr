/* ==~~~== Header ==~~~== */
header {
	width: 100%;
	margin-top: 80px;
	overflow: hidden;
	z-index: -1;
}
.carousel_cont {
	position: relative;
	margin: 0 auto;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 0;
}
.carousel_slide {
	cursor: move;
	position: absolute;
	left: 0px;
	top: 0px;
	width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 0;
}


@media (min-width: 740px) {
	header { margin-top: 100px; }
}
@media (min-width: 1025px) {
	header { margin-top: 120px; }
}


/* ==~~~== Main Body ==~~~== */
.main {
	position: relative;
	width: 100%;
	background-color: #FFF;
	text-align: center;
	z-index: 1;
}
.section_title {
	font-family: 'Montserrat', arial, sans-serif;
	font-weight: 100;
}
.section-text {
	position: relative;
	display: block;
	width: 90%;
	max-width: 1000px;
	margin: 5px auto;
	color: #444;
}


/* ==~~~== Home Page Main Body ==~~~== */
.user_links { padding-top: 50px; }
.section-text > span {
	color: #FF6927;
	font-weight: 900;
}
.signup {
	display: block;
	width: 170px;
	padding: 0.75em 1.5em;
  margin: 0 auto;
	border: 1px solid #FF6927;
  border-radius: 5px;
  text-align: center;
  color: #FFF;
  background: #FF6927;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
#attendee_signup { margin-bottom: 50px; }
#home_exhibitor_cont {
	position: relative;
	padding: 50px 0;
	z-index: 0;
}
.exhibitor_block {
	position: relative;
	display: block;
	width: 100%;
}
.exhibitor_img {
	display: block;
	margin: 10px auto;
	height: 100px;
	max-width: 100%;
}
#fss_img { height: auto; }


@media (min-width: 740px) {
	.user_links {
		height: 185px;
	}
	.signup { width: 190px; }
	.signup:hover {
		background: #FD8F3E;
		border: 1px solid #FD8F3E;
	}
	#home_exhibitor_cont { padding: 75px 0; }
}


@media (min-width: 1025px) {
	.signup { width: 204px; }
}


/* ==~~~== Expo Page Main Body ==~~~== */
.expo_info {
	padding: 50px 0 75px 0;
}
#expo_title {
	font-weight: 900;
}
.expo_loc {
	font-family: 'Istok Web', arial, sans-serif;
	margin-top: -15px;
}
#map-canvas {
	position: relative;
	height: 300px;
	width: 100%;
	z-index: 1;
}
.map_cover {
	position: relative;
	height: 300px;
	width: 100%;
	top: -300px;
	background: transparent;
	z-index: 2;
}
#panel {
	position: relative;
  text-align: left;
  margin-left: 40px;
  margin-bottom: -60px;
  background-color: #FFF;
  padding: 5px;
  z-index: 3;
  background: transparent;
}
#start {
	position: relative;
	top: 25px;
	width: 300px;
	max-width: 80%;
	padding: 5px;
}
#directions-panel {
	position: relative;
	display: block;
  height: 300px;
  max-width: 390px;
  margin: -300px 0 0 auto;
  background: #FFF;
  overflow: auto;
  z-index: 0;
  transition: 250ms ease-in;
}
#directions-panel.active {
	margin-top: 0;
}


@media (min-width: 740px) {
	.map_cover {
		top: 25px;
	}
	#directions-panel {
		height: 300px;
		width: 0px;
		margin: -300px 0 0 0;
		float: right;
		z-index: 3;
	}
	#directions-panel.active {
		width: 390px;
		margin-top: -300px;
	}
}