/*  ==~~~== Navbars ==~~~== */
.navbar {
	position: fixed;
	height: 80px; width: 100%;
	top: 0; left: 0;
	background-color: #FFF;
  z-index: 8;
}

.nav-logo-cont {
  height: 100%; width: 100%;
  margin: 0;
}

.nav-logo {
  position: relative;
  display: block;
  width: 80%;
  top: 50%;
  margin-left: 5%;
  font-family: 'Montserrat', arial, sans-serif;
  @include transform(translateY(-50%));
}

.nav-list-web {
  position: relative;
  display: none;
  width: 90%;
  bottom: 0;
	margin: 0 auto;
	padding: 0;
}

.web-btn { display: inline-block; }

.nav-btn-web {
  position: relative;
  top: 10px;
  padding: 6px;
  font-size: 15px;
  font-family: 'Montserrat', arial, sans-serif;
	cursor: pointer;
	@include transition(250ms ease-in-out);

	&:hover {
  	font-size: 17px;
	  border-top: 3px solid #FF6927;
	}

	/*&.opposite {
		color: #FF6927;

		&:hover { border-top: 3px solid #222; }
	}*/
}

#subscribe-btn {
  position: absolute;
  top: 4px; right: 0;
  padding: 6px 8px;
  border-radius: 5px;
  color: #FFF;
  background: #FF6927;
  @include transition(250ms ease-in-out);

  &:hover {
  	border-top: none;
  	font-size: 15px;
  	background: #FD8F3E;
  }
}

.nav-list-mobile {
	position: fixed;
  height: 100vh; width: 100%;
  top: 0; left: -100%;
  margin: 0;
	background-color: #222;
  z-index: 8;
  @include transition(1000ms ease-in-out);

  &.small { padding: 0; }

  &.active { left: 0; }
}

.mobile-btn {
  display: inline-block;
  width: 100%;
  padding: 10px;
  color: #DDD;

  &.small {
  	width: 33.3%;
  	float: left;
  	margin: 0 0 20px 0;
  }
}

.nav-btn-mobile {
	padding: 5px;
	cursor: pointer;
	color: #FFF;
	font-size: 16px;
  font-family: 'Montserrat', arial, sans-serif;
  @include transition(250ms ease-in-out);

  &:hover {
  	border-left: 3px solid #FF6927;
  	font-size: 18px;
	}

	&.opposite {
		color: #FF6927;

		&:hover { border-left: 3px solid #FFF; }
	}
}

.nav-reveal {
  position: fixed;
  width: 40px; height: 20px;
  top: 10px; right: 0;
  cursor: pointer;
  z-index: 9;

  & span, & span:before, & span:after {
  	position: absolute;
  	display: block;
  	height: 5px; width: 30px;
  	top: 0px;
  	border-radius: 1px;
  	background: #FF6927;
  	content: '';
  }

  & span:before { top: 8px; }
  & span:after { top: 16px; }
  &, & span, & span:before, & span:after { @include transition(500ms ease-in-out); }

  &.active {
  	& span { background: transparent; }

  	& span:before, & span:after { top: 5px; }
  	& span:before { @include transform(rotate(45deg)); }
  	& span:after { @include transform(rotate(-45deg)); }
  }
}


