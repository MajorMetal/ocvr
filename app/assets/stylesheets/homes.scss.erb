/* ==~~~== Header ==~~~== */
header {
	position: relative;
	display: block;
	width: 100%;
	margin-top: 80px;
	overflow: hidden;
	z-index: 1;
}
.carousel_cont {
	position: relative;
	margin: 0 auto;
	width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}
.carousel_slide {
	cursor: move;
	position: absolute;
	top: 0px; left: 0px;
	width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}


@media (min-width: 740px) {
	header { margin-top: 100px; }
}
@media (min-width: 1025px) {
	header { margin-top: 120px; }
}


/* ==~~~== Main Body ==~~~== */
.main {
	position: relative;
	display: block;
	width: 100%;
	background-color: #FFF;
	text-align: center;
	z-index: 1;
}
.main > .container { padding-top: 50px; }
.section-title {
	padding-bottom: 20px;
	font-weight: 100;
	font-family: 'Montserrat', arial, sans-serif;
}
.section-subtitle {
	padding-bottom: 10px;
	font-weight: 100;
	font-family: 'Istok Web', arial, sans-serif;
}
.section-text {
	position: relative;
	width: 90%;
	max-width: 800px;
	margin: 0 auto;
	padding-bottom: 5px;
	color: #444;
}
.section-text > span {
	color: #FF6927;
	font-weight: 900;
}


/* ==~~~== Home Page Main Body ==~~~== */
.button {
	position: relative;
	display: block;
	width: 180px;
	margin: 0 auto;
	padding: 0.75em 1.5em;
	border: 1px solid #FF6927;
  border-radius: 5px;
  text-align: center;
  color: #FFF;
  background: #FF6927;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
#attendee_button { margin-bottom: 50px; }


@media (min-width: 740px) {
	.button { width: 192px; }
	.button:hover {
		background: #FD8F3E;
		border: 1px solid #FD8F3E;
	}
	#attendee_button { margin-bottom: 0; }
}
@media (min-width: 1025px) {
	.button { width: 212px; }
}


/* ==~~~== Google Map ==~~~== */
.directions-input {
	position: absolute;
	display: block;
	width: 300px;
	max-width: 85%;
	top: 75px; left: 40px;
  z-index: 3;
}
#directions-start {
	position: relative;
	width: 100%;
	padding: 5px;
}
#map-canvas {
	position: relative;
	height: 300px;
	width: 100%;
	z-index: 1;
}
#directions-panel {
	position: relative;
	display: block;
  height: 300px;
  max-width: 390px;
  margin: -300px 0 0 auto;
  background: #FFF;
  overflow: auto;
  -webkit-transition: 250ms ease-in;
  	-moz-transition: 250ms ease-in;
  		-o-transition: 250ms ease-in;
  			transition: 250ms ease-in;
}
#directions-panel.active { margin-top: 0; }


@media (min-width: 740px) {
	#directions-panel {
		height: 300px;
		width: 0px;
		margin: -300px 0 0 0;
		float: right;
		z-index: 3;
	}
	#directions-panel.active {
		width: 390px;
		margin-top: -300px;
	}
}