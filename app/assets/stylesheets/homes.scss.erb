/* ==~~~== Header ==~~~== */
header {
	position: relative;
	display: block;
	width: 100%;
	margin-top: 80px;
	overflow: hidden;
	z-index: 1;
}
.carousel_cont {
	position: relative;
	margin: 0 auto;
	width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}
.carousel_slide {
	cursor: move;
	position: absolute;
	top: 0px; left: 0px;
	width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}


@media (min-width: 740px) {
	header { margin-top: 140px; }
}
@media (min-width: 1025px) {
	header { margin-top: 160px; }
}


/* ==~~~== Main Body ==~~~== */
.main {
	position: relative;
	display: block;
	width: 100%;
	background-color: #FFF;
	text-align: center;
	z-index: 1;
}
.main > .container { padding-top: 100px; }
.main.attend { margin-top: 80px; }
.section-title {
	padding-bottom: 20px;
	font-weight: 900;
	font-family: 'Montserrat', arial, sans-serif;
}
.expo-location {
	width: 100%;
	padding-bottom: 20px;
}
.section-subtitle {
	padding-bottom: 10px;
	font-weight: 100;
	font-family: 'Istok Web', arial, sans-serif;
	clear: both;
}
.section-subtitle.sponsor {
	font-size: 1em;
	font-weight: 900;
	color: #333;
}
.section-text {
	position: relative;
	width: 90%;
	max-width: 800px;
	margin: 0 auto;
	padding-bottom: 5px;
	color: #444;
}
.section-text > span {
	color: #FF6927;
	font-weight: 900;
}

@media (min-width: 740px) {
	.main.attend { margin-top: 140px; }
}
@media (min-width: 1025px) {
	.main.attend { margin-top: 160px; }
}


/* ==~~~== Home Page Main Body ==~~~== */
.button {
	position: relative;
	display: block;
	width: 260px;
	margin: 0 auto;
	padding: 20px 25px;
	border: 1px solid #FF6927;
  border-radius: 5px;
  text-align: center;
  color: #FFF;
  background: #FF6927;
  cursor: pointer;
  -webkit-transition: 250ms ease-in-out;
    -moz-transition: 250ms ease-in-out;
      -o-transition: 250ms ease-in-out;
        transition: 250ms ease-in-out;
}
#attendee_button {
	display: block;
	padding-bottom: 100px;
}
#ticket-iframe { display: none; }
.ticket-iframe {
	height: 436px;
	width: 100%;
	border: none;
	overflow: auto;
}


@media (min-width: 740px) {
	.button:hover {
		background: #FD8F3E;
		border: 1px solid #FD8F3E;
	}
	#attendee_button { display: none; }
	#ticket-iframe { display: block; }
}
@media (min-width: 1025px) {
	.button { width: 270px; }
}


/* ==~~~== Google Map ==~~~== */
.directions-input {
	position: absolute;
	display: block;
	width: 300px;
	max-width: 85%;
	top: 125px; left: 40px;
  z-index: 3;
}
#directions-start {
	position: relative;
	width: 100%;
	padding: 5px;
}
#map-canvas {
	position: relative;
	height: 300px;
	width: 100%;
	z-index: 1;
}
#directions-panel {
	position: relative;
	display: block;
  height: 300px;
  max-width: 390px;
  margin: -300px 0 0 auto;
  background: #FFF;
  overflow: auto;
  -webkit-transition: 250ms ease-in;
  	-moz-transition: 250ms ease-in;
  		-o-transition: 250ms ease-in;
  			transition: 250ms ease-in;
}
#directions-panel.active { margin-top: 0; }


@media (min-width: 740px) {
	#directions-panel {
		height: 300px;
		width: 0px;
		margin: -300px 0 0 0;
		float: right;
		z-index: 3;
	}
	#directions-panel.active {
		width: 390px;
		margin-top: -300px;
	}
}

.sponsor-cont, .exhibitor-cont { margin-bottom: 25px; }
.sponsor-img-cont, .exhibitor-img-cont {
	position: relative;
	display: block;
	height: 100px;
	width: 360px;
	max-width: 100%;
	margin: 10px auto;
	border: 2px solid #AAA;
	border-radius: 5px;
}
.sponsor-img-cont.duncan {
	height: auto;
	border: none;
	padding: 0 4%;
}
.sponsor-img, .exhibitor-img {
	position: relative;
	max-width: 100%;
	max-height: 100%;
	padding: 0.25em;
	top: 50%;
	-webkit-transform: translateY(-50%);
  	-moz-transform: translateY(-50%);
  		-o-transform: translateY(-50%);
  			transform: translateY(-50%);
}
.sponsor-img.duncan { 
	top: 0%;
	-webkit-transform: translateY(0%);
  	-moz-transform: translateY(0%);
  		-o-transform: translateY(0%);
  			transform: translateY(0%);
}
#exhibitor-cont { padding: 0; }
.speaker-cont {
	width: 100%;
	margin: 0 auto;
}
#speakers-cont-home {
	width: 100%;
	margin-bottom: 100px;
	padding: 100px 0;
	background: #222;
	color: #DDD;
}
.speaker-img-cont {
	position: relative;
	display: block;
	float: left;
	height: 300px;
	width: 50%;
}
.speaker-img {
	position: relative;
	height: 120px;
	width: 120px;
	border-radius: 50%;
}
.speaker-info {
	font-size: 16px;
	max-width: 80%;
	margin: 5px auto;
}
.speaker-info.name { font-weight: 900; }


@media (min-width: 740px) {
	.sponsor-img-cont {
		width: 44% !important;
		margin: 4px 3%;
		float: left;
	}
	.sponsor-img-cont.diamond {
		width: 55% !important;
		margin: 4px auto;
		float: none;
	}
	.sponsor-img-cont.duncan {
		margin: 4px auto;
		float: none;
	}
	.exhibitor-img-cont {
		width: 31.3% !important;
		margin: 4px 1%;
		float: left;
	}
	.speaker-img-cont {
		height: 250px;
		width: 33.3%;
	}
}

#expo-info-home {
	width: 100%;
	margin-top: 100px;
	padding: 100px 0;
	background: #222;
	color: #DDD;
}
#section-text-home {
	color: #BBB;
}